{
    "@type": "h1",
    "@content": {
            "@type": "@if", 
            "@condition": "${ args > 1 }", 
            "@then": {
                "@type": "h1",
                "@content": "This text is the content of the first argument ${argv[1]}"
            }, 
            "@else": {
                "@type": "h2", 
                "@content": "There are no arguments"
        }
    }
}
